    <div class="container">
      <h1>Book your superhero</h1>
      <p></p>
      <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
        <input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group">
          <%= form_tag superheros_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          placeholder: "Find a location...",
          class: "form-control" %>
          <% end %>
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </form>
    </div>
  </div>

  <div class="card-add-action">
    <div class="container banner-add-sp">
      <div>
        <h1>Earn money by renting your superhero</h1>
        <a class="button-krypton-ghost" href="#">Add now</a>
      </div>
    </div>
  </div>


  <div class="container">
    <br>
    <p><strong>MEET THEM</strong></p>
    <div class="cards-superheroes">
      <% @superheros.each do |hero| %>
      <div class="card-superhero">
        <%= cl_image_tag hero.photo %>
        <div class="card-superhero-content">
          <h5 class="green-color"> <%= hero.name %></h5>
          <p>Price per day: <%= hero.price_per_day %> €</p>
          <p> Review: <span class=green-color>★★★★★</span></p>
          <p>Superpower: <%= hero.superpower %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
