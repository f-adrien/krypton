<div class="banner-new" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'newbackgroud.jpg' %>)">
  <div class="container pt-4" >
    <h2>Create your Superhero</h2>
  </div>
    <div class="container mt-4">
      <%= simple_form_for [@user, @superhero] do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :superpower %>
      <%= f.input :price_per_day %>
      <div class="button mt-4">
        <%= f.submit "Add this Superhero", class: "button-krypton"%>
      </div>
      <% end %>
    </div>
</div>




